<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1A9FA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="My Finances"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/nomeEdtTxt"
        android:layout_width="372dp"
        android:layout_height="74dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Nome"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/emailEdtTxt"
        android:layout_width="372dp"
        android:layout_height="74dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Email"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeEdtTxt" />

    <EditText
        android:id="@+id/senhaEdtTxt"
        android:layout_width="372dp"
        android:layout_height="74dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Senha"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEdtTxt" />

    <Button
        android:id="@+id/criarContaBtn"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button"
        android:text="Abrir Conta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhaEdtTxt" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="289dp"
        android:layout_height="51dp"
        android:background="@drawable/buttoninvisible"
        android:fontFamily="sans-serif"
        android:text="Cancelar"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/criarContaBtn"
        app:layout_constraintVertical_bias="0.194" />
</androidx.constraintlayout.widget.ConstraintLayout>