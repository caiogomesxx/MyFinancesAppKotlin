<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c2c2c"
    tools:context=".TelaPrincipal">

    <TextView
        android:id="@+id/tvMes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agosto"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEntradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Entradas \n R$ 10.000.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMes" />

    <ImageView
        android:id="@+id/imUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/up"
        app:layout_constraintStart_toEndOf="@+id/tvEntradas"
        app:layout_constraintTop_toBottomOf="@+id/tvMes" />

    <TextView
        android:id="@+id/tvSaidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Saidas \n - R$ 3.798,00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMes" />

    <ImageView
        android:id="@+id/imDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/down"
        app:layout_constraintEnd_toStartOf="@+id/tvSaidas"
        app:layout_constraintTop_toBottomOf="@+id/tvMes" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Total \n  R$ 6.202,00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/glDivisao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glDivisao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <View
        android:id="@+id/vBottomBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#C1A9FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glDivisao" />

    <TextView
        android:id="@+id/vContas"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/retangle"
        android:paddingTop="30dp"
        android:text="Conta de Luz      - R$ 189,90"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glDivisao" />

    <TextView
        android:id="@+id/vContas1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/retangle"
        android:paddingTop="30dp"
        android:text="Conta de Luz      - R$ 189,90"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vContas" />

    <TextView
        android:id="@+id/vContas2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/retangle"
        android:paddingTop="30dp"
        android:text="Conta de Luz      - R$ 189,90"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vContas1" />


    <View
        android:id="@+id/vFooter"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#2c2c2c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/vHome"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:background="#7C65B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vHome"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vPlus" />

    <View
        android:id="@+id/vPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle"
        android:backgroundTint="#7A7C87"
        app:layout_constraintBottom_toTopOf="@+id/vFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vFooter"
        app:layout_constraintTop_toTopOf="@+id/vFooter" />

    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/plus"
        app:layout_constraintBottom_toTopOf="@+id/vFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vFooter"
        app:layout_constraintTop_toTopOf="@+id/vFooter" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/vPlus"
        app:layout_constraintEnd_toEndOf="@+id/vPlus"
        app:layout_constraintTop_toBottomOf="@id/vPlus"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Nova Transação"
        android:textColor="@color/white"
        android:textSize="17sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>